---
interface Props {
    mode: string;
    detail?: any;
    sections?: string[];
}
// interface section {
//     subtitle: string,
//     text: string
// }

const { mode, sections}  = Astro.props;
console.log(sections);
import IgPost from './IgPost.astro';
import FilterList from './FilterList.astro';
import Author from './Author.astro';


---


<div>
    {
        () => {
            if (mode === 'post') {
                return (
                    <Author sections={sections}/>
                )
            } else {
                return (
                    <section>
                        <h2>Categories</h2>
                        <span class="separate"></span>
                        <FilterList />
                    </section>
                    <section>
                        <h2>Posts</h2>
                        <span class="separate"></span>
                        <IgPost />
                    </section>
                )
            }
        }
    }
</div>


<style lang="scss">

    div {
        width: 100%;
        display: flex;
        flex-direction: column;
        // justify-content: space-between;
        height: 100%;
        gap: 30px;

        section {
            width: 100%;
            height: max-content;
            display: flex;
            flex-direction: column;
            // justify-content: center;
            align-items: center;

            h2 {
                margin-bottom: 10px;
                color: #74777c;
            }

            .separate {
                width: 100%;
                height: 1px;
                background-color: #74777c;
                margin-bottom: 30px;
                position: relative;
            }

            .separate::after {
                content: '';
                display: block;
                width: 60%;
                height: 4px;
                background-color: #74777c;
                position: absolute;
                left: 0;
                right: 0;
                margin: auto;
                border-radius: 0 0 10px 10px;
            }
        }
    }

</style>