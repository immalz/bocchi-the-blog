---
import Button from './Button.astro';
import Card from './Card.astro';
import { blogs } from '../data/blogs.js';

---

<section>
    {
        blogs.map((card: any, index: any) => {
            return (
                <Card article={card} index={index} />
            )
        })
    } 
</section>

