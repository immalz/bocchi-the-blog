<style lang="scss">
    section {
        width: 100%;
        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: auto;

        @media (max-width: 800px) {
            grid-template-columns: 1fr;
        }

        @media (min-width: 800px) {
            grid-template-columns: 1fr 1fr;
        }
        
        @media (min-width: 60em) {
            grid-template-columns: repeat(3, 1fr);
        }
    }
