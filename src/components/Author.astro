---
let { sections } = Astro.props;

sections = sections.map((section: any) => {
    return {
        title: section,
        route: `#${section.toLowerCase().replace(' ', '-')}`
    }
})
---


<p>Escrito por</p>

<div class="card">
    <div class="card__img"></div>
    <div class="card__description">
        <h4>Marco Alzamora</h4>
    </div>
</div>

<p>En este post</p>

<div class="sections">
    {
        sections.map((section: any, index: number) => {
            return (
                section.title && <a href=`${section.route}` > {section.title} </a>
            )
        })
    }
</div>

